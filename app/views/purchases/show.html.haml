.confirm__container
  .confirm__simple__header__logo
    = link_to image_tag("logo/logo.png", height: "40", width: "140", alt: "main-logo"), root_path
    .buy-main__box
      .buy-content
        %h2.buy-content__header
          購入内容の確認
        .buy-content__product
          .buy-content__product__inner
            .buy-product-main
              .buy-product-image
              .buy-product-name 
            .buy-form
              %p.buy-price
                500¥
                %span送料込み
              .buy-price-table
                .buy-price-table__left
                  支払金額
                .buy-price-table__right
                  500¥
                  = form_tag(action: :pay, method: :post) do
                    %button 購入する
        .buy-content__user-info
          .buy-content__user-info__inner
            %h3 支払方法
            .user-info-text
              %br
            .user-info-fix
              = link_to "#" do
                変更する
                %span
                %i.fa.fa-chevron-right
        .buy-content__user-info
          .buy-content__user-info__inner
            %h3 配送先
            .user-info-text
              〒150-0041
              %br
              東京都渋谷区神南1丁目18−2
              %br
            .user-info-fix
              = link_to "#" do
                変更する
                %span 
                %i.fa.fa-chevron-right
  .signup__footer
    .signup__footer__detail
      = link_to "プライバシーポリシー"
      = link_to "利用規約"
      = link_to "特定商取引に関する表記"
    .signup__footer__logo
      = link_to image_tag("icon/icon_brand.png", height: "60", width: "70", alt: "footer-logo"), root_path
    %p © 2020 FURIMA

