%section.main__pickup
  %h2.main__pickup__title
    商品一覧
  .main__pickup__box
    .main__pickup__box__title
      %a(href="#")
        %h3.name
          新規投稿商品
    .main__pickup__box__contents
      - @items.find_each do |item|
        .main__pickup__box__contents__content
          %a(href="#")
            %figure.main__pickup__box__contents__content__img
              = item.images.first
            .main__pickup__box__contents__content__text
              %h3.name
                = item.name
              .details
                %ul
                  %li
                    = item.price
                  %li
                    = icon('fas', 'star', '0')
                %p
                  (税込)
