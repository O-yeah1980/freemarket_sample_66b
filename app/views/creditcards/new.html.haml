    .right-contents
      .right-contents__card-info
        クレジットカード情報入力
      .right-contents__add-info
        -# コントローラ作成前なので仮のパス
        = form_with url: user_creditcards_path do |f|
          .right-contents__add-info__number
            = f.label :カード番号
            = f.text_field :customer_id, type: 'text', placeholder: '半角英数のみ', maxlength: '16'
          .right-contents__add-info__expire
            = f.label :有効期限
            .right-contents__add-info__expire__month
              = f.select :expire_month, Creditcard.expire_months.keys.map { |k| [k, k] }, prompt: ""
            .right-contents__add-info__expire__year
              = f.select :expire_year, Creditcard.expire_years.keys.map { |k| [k, k] }, prompt: ""
          .right-contents__add-info__security-code
            = f.label :セキュリティコード
            = f.text_field :card_id, type: 'text', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: '4'
          .right-contents__add-info__button
            = f.submit :追加する

